FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0.001 0 0);

boundaryField
{
    inlet
    {
        type            cyclic;
    }
    outlet
    {
        type            cyclic;
    }
    top
    {
        type            fixedValue;
        value           nonuniform 0();
    }
    hills
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
    front
    {
        type            empty;
    }
    back
    {
        type            empty;
    }
    procBoundary1to0
    {
        type            processor;
        value           uniform (0.001 0 0);
    }
    procBoundary1to2
    {
        type            processor;
        value           uniform (0.001 0 0);
    }
    procBoundary1to3
    {
        type            processor;
        value           uniform (0.001 0 0);
    }
}


