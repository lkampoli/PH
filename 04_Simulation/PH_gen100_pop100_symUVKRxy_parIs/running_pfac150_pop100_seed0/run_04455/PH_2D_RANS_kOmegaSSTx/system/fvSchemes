FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         steadyState;
}

gradSchemes
{
    default         Gauss linear;
}

divSchemes
{
    default         none;
    div(phi,U)                    bounded Gauss upwind;
    div(phi,k)                    bounded Gauss limitedLinear 1; //bounded Gauss upwind;
    div(phi,omega)                bounded Gauss limitedLinear 1; //bounded Gauss upwind;
    div((nuEff*dev(T(grad(U)))))  Gauss linear;
    div(dev(((2*k)*Ax)))          Gauss linear;
}

laplacianSchemes
{
    default         Gauss linear corrected;
}

interpolationSchemes
{
    default         linear;
}

snGradSchemes
{
    default         corrected;
}

wallDist
{
    method          meshWave;
    nRequired       yes;
}

fluxRequired
{
    default         no;
    p               ;
}


// ************************************************************************* //
